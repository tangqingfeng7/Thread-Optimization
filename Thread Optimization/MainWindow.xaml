<Window x:Class="CoreX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreX"
        xmlns:vm="clr-namespace:CoreX.ViewModels"
        xmlns:converters="clr-namespace:CoreX.Converters"
        xmlns:models="clr-namespace:CoreX.Models"
        mc:Ignorable="d"
        Title="TEST" 
        Height="1080" 
        Width="1920"
        MinHeight="720"
        MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CoreTypeToColorConverter x:Key="CoreTypeToColorConverter"/>
        <converters:CoreSelectedToBackgroundConverter x:Key="CoreSelectedToBackgroundConverter"/>
        <converters:CoreSelectedToForegroundConverter x:Key="CoreSelectedToForegroundConverter"/>
        <converters:AppStatusToColorConverter x:Key="AppStatusToColorConverter"/>
        <converters:BindingModeConverter x:Key="BindingModeConverter"/>
        <converters:VendorToVisibilityConverter x:Key="VendorToVisibilityConverter"/>
        <converters:PriorityToChineseConverter x:Key="PriorityToChineseConverter"/>
    </Window.Resources>

    <Grid Margin="40,32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题区 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="TEST" 
                               FontSize="32" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <Border Background="{StaticResource PrimaryBrush}" 
                            CornerRadius="4" 
                            Padding="6,2" 
                            Margin="12,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="Beta" FontSize="10" Foreground="White" FontWeight="Medium"/>
                    </Border>
                </StackPanel>
                <TextBlock Text="{Binding CpuName}" 
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,6,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <!-- 实时监控面板 -->
                <Border Background="#F5F5F7" CornerRadius="8" Padding="16,8" Margin="0,0,16,0"
                        Visibility="{Binding EnableRealtimeMonitor, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <!-- CPU使用率 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="CPU" FontSize="11" Foreground="#86868B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CpuUsageText}" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- CPU频率 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="频率" FontSize="11" Foreground="#86868B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CpuFrequencyText}" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- CPU温度 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="温度" FontSize="11" Foreground="#86868B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CpuTemperatureText}" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 内存 -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="内存" FontSize="11" Foreground="#86868B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding MemoryUsageText}" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="{Binding CoreSummary}" 
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>
                <Border Background="#007AFF" CornerRadius="6" Padding="12,6"
                        Visibility="{Binding IsIntel, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Intel" Foreground="White" FontWeight="Medium" FontSize="12"/>
                </Border>
                <Border Background="#ED1C24" CornerRadius="6" Padding="12,6"
                        Visibility="{Binding IsAmd, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="AMD" Foreground="White" FontWeight="Medium" FontSize="12"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- 目标进程 + 快速预设 -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <StackPanel>
                <!-- 目标进程 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="目标进程" 
                               FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding TargetProcessName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                        <TextBlock Grid.Column="1" 
                                   Text=".exe" 
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>
                    
                    <Button Grid.Column="2" Content="浏览" 
                            Command="{Binding BrowseProcessCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="16,0,8,0"/>
                    <Button Grid.Column="3" Content="扫描" 
                            Command="{Binding ScanProcessCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </Grid>
                
                <!-- 分隔线 -->
                <Border Height="1" Background="#F2F2F7" Margin="0,16"/>
                
                <!-- 快速预设 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="快速预设" 
                               FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    
                    <ItemsControl Grid.Column="1" ItemsSource="{Binding Presets}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ApplyPresetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Type}"
                                        Content="{Binding Name}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="0,0,8,0"
                                        ToolTip="{Binding Description}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 核心选择区 -->
        <Border Grid.Row="4" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 标题行 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="核心调度池" 
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        
                        <!-- 图例 -->
                        <StackPanel Orientation="Horizontal" Margin="24,0,0,0"
                                    Visibility="{Binding IsHybrid, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Ellipse Width="8" Height="8" Fill="#007AFF" Margin="0,0,4,0"/>
                            <TextBlock Text="P核" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,12,0"/>
                            <Ellipse Width="8" Height="8" Fill="#30D158" Margin="0,0,4,0"
                                     Visibility="{Binding IsIntel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="E核" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"
                                       Visibility="{Binding IsIntel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="24,0,0,0"
                                    Visibility="{Binding IsAmd, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Ellipse Width="8" Height="8" Fill="#FF9F0A" Margin="0,0,4,0"
                                     Visibility="{Binding IsX3D, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBlock Text="3D" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,12,0"
                                       Visibility="{Binding IsX3D, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Ellipse Width="8" Height="8" Fill="#BF5AF2" Margin="0,0,4,0"/>
                            <TextBlock Text="标准" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" 
                                    Visibility="{Binding IsIntel, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Content="P核" Command="{Binding SelectAllPCoresCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"/>
                            <Button Content="E核" Command="{Binding SelectAllECoresCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" 
                                    Visibility="{Binding IsAmd, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Content="3D核心" Command="{Binding SelectVCacheCoresCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"
                                    Visibility="{Binding IsX3D, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="标准" Command="{Binding SelectStandardCoresCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"
                                    Visibility="{Binding IsX3D, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="CCD0" Command="{Binding SelectCcd0Command}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"
                                    Visibility="{Binding HasMutipleCcds, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="CCD1" Command="{Binding SelectCcd1Command}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"
                                    Visibility="{Binding HasMutipleCcds, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                        
                        <Button Content="全选" Command="{Binding SelectAllCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"/>
                        <Button Content="清空" Command="{Binding ClearSelectionCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                        <Button Content="应用" Command="{Binding ApplySelectionCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
                
                <!-- 核心网格 -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Cores}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Width="88" Height="56" Margin="4" Cursor="Hand">
                                    <ToggleButton.ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding TypeLabel}" Foreground="#86868B"/>
                                        </StackPanel>
                                    </ToggleButton.ToolTip>
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border" CornerRadius="10" BorderThickness="1.5" BorderBrush="#E5E5EA">
                                                <Border.Background>
                                                    <MultiBinding Converter="{StaticResource CoreSelectedToBackgroundConverter}">
                                                        <Binding Path="IsSelected"/>
                                                        <Binding Path="CoreType"/>
                                                    </MultiBinding>
                                                </Border.Background>
                                                <Grid>
                                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontWeight="Medium" FontSize="13"
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{Binding IsSelected, Converter={StaticResource CoreSelectedToForegroundConverter}}"/>
                                                        <TextBlock Text="{Binding TypeLabel}"
                                                                   FontSize="10" Opacity="0.7"
                                                                   HorizontalAlignment="Center" Margin="0,2,0,0"
                                                                   Foreground="{Binding IsSelected, Converter={StaticResource CoreSelectedToForegroundConverter}}"/>
                                                    </StackPanel>
                                                    <!-- 使用率指示条 -->
                                                    <Border VerticalAlignment="Bottom" Height="3" CornerRadius="0,0,10,10"
                                                            Visibility="{Binding DataContext.ShowPerCoreUsage, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="#30D158" Offset="0"/>
                                                                <GradientStop Color="#FF9F0A" Offset="0.5"/>
                                                                <GradientStop Color="#FF3B30" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                        <Border.OpacityMask>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="Black" Offset="{Binding Usage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Percent}"/>
                                                                <GradientStop Color="Transparent" Offset="{Binding Usage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Percent}"/>
                                                            </LinearGradientBrush>
                                                        </Border.OpacityMask>
                                                    </Border>
                                                    <!-- 使用率文本 -->
                                                    <TextBlock Text="{Binding UsageText}" FontSize="8" Opacity="0.6"
                                                               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,6,0"
                                                               Foreground="{Binding IsSelected, Converter={StaticResource CoreSelectedToForegroundConverter}}"
                                                               Visibility="{Binding DataContext.ShowPerCoreUsage, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#C7C7CC"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 设置区 -->
        <Border Grid.Row="6" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：核心设置 -->
                <StackPanel Grid.Column="0">
                    <!-- 优先核心 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="优先核心" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding AvailablePriorityCores}"
                                  SelectedItem="{Binding PriorityCore}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  MaxWidth="180" HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" FontSize="13"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    
                    <!-- 进程优先级 -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="进程优先级" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding PriorityLevels}"
                                  SelectedItem="{Binding SelectedPriority}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  MaxWidth="160" HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource PriorityToChineseConverter}}" FontSize="13"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    
                    <!-- 绑定模式 -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="绑定模式" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <RadioButton Content="动态" Style="{StaticResource ModernRadioButtonStyle}"
                                         IsChecked="{Binding SelectedBindingMode, Converter={StaticResource BindingModeConverter}, ConverterParameter=Dynamic}"
                                         Margin="0,0,20,0"/>
                            <RadioButton Content="静态" Style="{StaticResource ModernRadioButtonStyle}"
                                         IsChecked="{Binding SelectedBindingMode, Converter={StaticResource BindingModeConverter}, ConverterParameter=Static}"
                                         Margin="0,0,20,0"/>
                            <RadioButton Style="{StaticResource ModernRadioButtonStyle}"
                                         IsChecked="{Binding SelectedBindingMode, Converter={StaticResource BindingModeConverter}, ConverterParameter=D2}"
                                         Margin="0,0,20,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="D2"/>
                                    <TextBlock Text=" β" Foreground="{StaticResource AccentBrush}" FontSize="10"/>
                                </StackPanel>
                            </RadioButton>
                            <RadioButton Style="{StaticResource ModernRadioButtonStyle}"
                                         IsChecked="{Binding SelectedBindingMode, Converter={StaticResource BindingModeConverter}, ConverterParameter=D3PowerSave}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="D3省电"/>
                                    <TextBlock Text=" β" Foreground="{StaticResource AccentBrush}" FontSize="10"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 自动选项 -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <CheckBox Content="自动启动监控" IsChecked="{Binding AutoStartMonitoring}"
                                  Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,24,0"/>
                        <CheckBox Content="检测到进程自动应用" IsChecked="{Binding AutoApplyOnProcessStart}"
                                  Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,24,0"/>
                        <CheckBox Content="应用到子线程" IsChecked="{Binding ApplyToChildThreads}"
                                  Style="{StaticResource ModernCheckBoxStyle}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 右侧：配置档案管理 -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 标题 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="配置档案" FontSize="13" FontWeight="Medium"
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Profiles.Count, StringFormat=' ({0})'}" 
                                   FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 档案列表 -->
                    <ListBox Grid.Row="2" ItemsSource="{Binding Profiles}" 
                             SelectedItem="{Binding SelectedProfile}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             MaxHeight="100">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9F9FB" CornerRadius="6" Padding="10,6" Margin="0,0,0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Medium"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0">
                                                <Run Text="{Binding ProcessName}"/>
                                                <Run Text=" | "/>
                                                <Run Text="{Binding SelectedCoreIndices.Count}"/>
                                                <Run Text="核心"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="加载" FontSize="10" Padding="6,2"
                                                    Command="{Binding DataContext.LoadProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0"/>
                                            <Button Content="删除" FontSize="10" Padding="6,2"
                                                    Command="{Binding DataContext.DeleteProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- 操作按钮 -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <Button Content="保存当前" Command="{Binding SaveProfileCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                        <Button Content="导出" Command="{Binding ExportConfigCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                        <Button Content="导入" Command="{Binding ImportConfigCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 多进程管理面板 -->
        <Border Grid.Row="8" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：进程组列表 -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 标题栏 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="进程组" FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ProcessGroups.Count, StringFormat=' ({0})'}" 
                                       FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="新建" Command="{Binding CreateProcessGroupCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"/>
                            <Button Content="全部启动" Command="{Binding StartAllProcessGroupsCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"/>
                            <Button Content="全部停止" Command="{Binding StopAllProcessGroupsCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 进程组列表 -->
                    <ListBox Grid.Row="2" ItemsSource="{Binding ProcessGroups}" 
                             SelectedItem="{Binding SelectedProcessGroup}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             MaxHeight="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9F9FB" CornerRadius="8" Padding="12,8" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="13"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding ProcessNamesText}" FontSize="11"
                                                           Foreground="{StaticResource TextTertiaryBrush}"
                                                           TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                                                <TextBlock Text=" | " FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding CoreCountText}" FontSize="11"
                                                           Foreground="{StaticResource TextTertiaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="6" Height="6" Margin="0,0,6,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#AEAEB2"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                                <Setter Property="Fill" Value="#30D158"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <Button Content="▶" FontSize="10" Padding="6,3"
                                                    Command="{Binding DataContext.StartProcessGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0"/>
                                            <Button Content="■" FontSize="10" Padding="6,3"
                                                    Command="{Binding DataContext.StopProcessGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Style="{StaticResource DangerButtonStyle}" Margin="0,0,4,0"/>
                                            <Button Content="✕" FontSize="10" Padding="6,3"
                                                    Command="{Binding DataContext.DeleteProcessGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                
                <!-- 右侧：选中组的进程管理 -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 标题 -->
                    <TextBlock Grid.Row="0" Text="组内进程" FontSize="13" FontWeight="Medium"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <!-- 添加进程 -->
                    <Grid Grid.Row="2" Visibility="{Binding SelectedProcessGroup, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Text="{Binding NewProcessName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="添加" 
                                Command="{Binding AddProcessToGroupCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="8,0,0,0"/>
                    </Grid>
                    
                    <!-- 进程列表 -->
                    <ItemsControl Grid.Row="4" 
                                  ItemsSource="{Binding SelectedProcessGroup.ProcessNames}"
                                  Visibility="{Binding SelectedProcessGroup, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E8E8ED" CornerRadius="4" Padding="8,4" Margin="0,0,6,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding}" FontSize="12" VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Button Content="×" FontSize="11" Padding="4,0" Margin="6,0,0,0"
                                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                Command="{Binding DataContext.RemoveProcessFromGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Foreground" Value="#86868B"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="#FF3B30"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- 空状态提示 -->
                    <TextBlock Grid.Row="4" Text="请选择一个进程组" FontSize="12"
                               Foreground="{StaticResource TextTertiaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding SelectedProcessGroup, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 游戏库 & NUMA 优化 -->
        <Border Grid.Row="10" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto" MinWidth="280"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：游戏库 -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 标题栏 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="游戏库" FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Games.Count, StringFormat=' ({0})'}" 
                                       FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <Border Background="#30D158" CornerRadius="8" Padding="6,2" Margin="8,0,0,0"
                                    Visibility="{Binding RunningGamesCount, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding RunningGamesCount, StringFormat='{}{0} 运行中'}" 
                                           FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="扫描游戏" Command="{Binding ScanGamesCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,6,0"
                                    IsEnabled="{Binding IsScanningGames, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                            <ToggleButton Content="自动监控" IsChecked="{Binding IsGameMonitorEnabled}"
                                          Style="{StaticResource ModernToggleButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 游戏列表 -->
                    <ListBox Grid.Row="2" ItemsSource="{Binding Games}" 
                             SelectedItem="{Binding SelectedGame}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             MaxHeight="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9F9FB" CornerRadius="8" Padding="12,8" Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="13"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                                                <Ellipse Width="6" Height="6" Margin="8,0,0,0" VerticalAlignment="Center">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="Transparent"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                                    <Setter Property="Fill" Value="#30D158"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="#E8E8ED" CornerRadius="3" Padding="4,1" Margin="0,0,6,0">
                                                    <TextBlock Text="{Binding PlatformName}" FontSize="10"
                                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                                </Border>
                                                <TextBlock Text="{Binding ConfigSummary}" FontSize="11"
                                                           Foreground="{StaticResource TextTertiaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="▶" FontSize="10" Padding="6,3" ToolTip="启动游戏"
                                                    Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0"/>
                                            <Button Content="配置" FontSize="10" Padding="6,3" ToolTip="保存当前配置到此游戏"
                                                    Command="{Binding DataContext.ConfigureGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0"/>
                                            <Button Content="加载" FontSize="10" Padding="6,3" ToolTip="加载此游戏的配置"
                                                    Command="{Binding DataContext.LoadGameConfigurationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding HasConfiguration, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0"/>
                                            <Button Content="✕" FontSize="10" Padding="6,3" ToolTip="移除"
                                                    Command="{Binding DataContext.RemoveGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                
                <!-- 右侧：NUMA 优化 -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- NUMA 标题 -->
                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="NUMA 优化" FontSize="13" FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <Border CornerRadius="4" Padding="4,1" Margin="8,0,0,0"
                                    Visibility="{Binding IsNumaSupported, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#30D158"/>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="支持" FontSize="10" Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding NumaTopology}" FontSize="11" 
                                   Foreground="{StaticResource TextTertiaryBrush}" Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- NUMA 节点选择 -->
                    <StackPanel Grid.Row="2" Visibility="{Binding IsNumaSupported, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="选择 NUMA 节点" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                        
                        <ItemsControl ItemsSource="{Binding NumaNodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SelectNumaNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="0,0,8,0"
                                            ToolTip="{Binding DetailInfo}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding DisplayName}" FontSize="12"/>
                                            <TextBlock Text="{Binding CoreCount, StringFormat=' ({0}C)'}" FontSize="10" 
                                                       Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <Button Content="应用 NUMA 游戏优化" Command="{Binding ApplyNumaOptimizationCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,12,0,0"
                                HorizontalAlignment="Left"/>
                        
                        <!-- 跨 NUMA 警告 -->
                        <Border Background="#FFF3CD" CornerRadius="6" Padding="10,6" Margin="0,12,0,0"
                                Visibility="{Binding CrossNumaWarning, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding CrossNumaWarning}" FontSize="11" 
                                       Foreground="#856404" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- 不支持 NUMA 提示 -->
                    <TextBlock Grid.Row="2" Text="当前系统不支持 NUMA 或只有单节点" FontSize="12"
                               Foreground="{StaticResource TextTertiaryBrush}"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Visibility="{Binding IsNumaSupported, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 底部控制栏 -->
        <Grid Grid.Row="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 状态 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="8" Height="8" 
                         Fill="{Binding AppStatus, Converter={StaticResource AppStatusToColorConverter}}"
                         Margin="0,0,8,0"/>
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
            </StackPanel>
            
            <!-- 运行统计 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0"
                        Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="运行时长" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" 
                           VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBlock Text="{Binding RunTimeText}" FontSize="12" FontWeight="Medium"
                           Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="应用" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" 
                           VerticalAlignment="Center" Margin="16,0,4,0"/>
                <TextBlock Text="{Binding ApplyCount}" FontSize="12" FontWeight="Medium"
                           Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                <TextBlock Text="次" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" 
                           VerticalAlignment="Center" Margin="2,0,0,0"/>
            </StackPanel>
            
            <!-- 日志 -->
            <TextBlock Grid.Column="2" 
                       Text="{Binding LogMessage}"
                       Foreground="{StaticResource TextTertiaryBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="12"
                       TextTrimming="CharacterEllipsis"/>
            
            <!-- 按钮 -->
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <Button Content="启动" 
                        Command="{Binding ApplyConfigCommand}"
                        Style="{StaticResource AccentButtonStyle}"
                        IsEnabled="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                        Margin="0,0,8,0"/>
                <Button Content="停止" 
                        Command="{Binding StopCommand}"
                        Style="{StaticResource DangerButtonStyle}"
                        IsEnabled="{Binding IsRunning}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
