<Window x:Class="ThreadOptimization.Views.ProcessSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择进程" 
        Height="560" 
        Width="520"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F7"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 搜索框 -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="4"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.08"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="&#xE721;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="16"
                           Foreground="#86868B"
                           VerticalAlignment="Center"
                           Margin="12,0,8,0"/>
                
                <TextBox x:Name="SearchBox"
                         Grid.Column="1"
                         Text=""
                         FontSize="14"
                         VerticalAlignment="Center"
                         BorderThickness="0"
                         Background="Transparent"
                         TextChanged="SearchBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Padding" Value="4,10"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="2" 
                        Content="刷新" 
                        Click="RefreshButton_Click"
                        Padding="16,8"
                        Margin="8,4"
                        Background="#007AFF"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0056B3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- 进程列表 -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="14"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>
            <ListBox x:Name="ProcessList"
                     BorderThickness="0"
                     Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     MouseDoubleClick="ProcessList_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="8,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" 
                                    Width="36" Height="36" 
                                    CornerRadius="8" 
                                    Background="#F5F5F7"
                                    Margin="0,0,14,0">
                                <TextBlock Text="&#xE7C3;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"
                                           Foreground="#86868B"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Medium"
                                           FontSize="14"
                                           Foreground="#1D1D1F"/>
                                <TextBlock Text="{Binding WindowTitle}" 
                                           FontSize="12"
                                           Foreground="#86868B"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="280"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding Id, StringFormat=PID: {0}}"
                                       FontSize="11"
                                       Foreground="#86868B"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="Margin" Value="6,2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="border" 
                                            Background="Transparent" 
                                            CornerRadius="10"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#F5F5F7"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E5F1FF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>
        
        <!-- 按钮 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" 
                    Content="取消" 
                    Click="CancelButton_Click"
                    Padding="24,10"
                    Background="#F5F5F7"
                    Foreground="#1D1D1F"
                    BorderThickness="0"
                    Margin="0,0,10,0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8E8ED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Grid.Column="2" 
                    Content="选择" 
                    Click="SelectButton_Click"
                    Padding="24,10"
                    Background="#007AFF"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15" Color="#007AFF"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0056B3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
