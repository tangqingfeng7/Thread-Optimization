<Window x:Class="ThreadOptimization.CloseConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关闭确认" 
        Height="280" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- 主容器带阴影 -->
    <Border Background="White" CornerRadius="12" Margin="16">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="4" Opacity="0.15" Direction="270"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#FBFBFD" CornerRadius="12,12,0,0" 
                    BorderBrush="#F2F2F7" BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="20,16">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,2 L12,12 M17,7 L12,12 L7,7" 
                              Stroke="#86868B" StrokeThickness="2" 
                              StrokeLineJoin="Round"
                              Width="20" Height="20" Stretch="Uniform"
                              VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="关闭程序" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="#1D1D1F"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 关闭按钮 -->
                    <Button HorizontalAlignment="Right" 
                            Width="28" Height="28"
                            Click="BtnCancel_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bg" Background="Transparent" CornerRadius="6">
                                    <Path Data="M4,4 L12,12 M12,4 L4,12" 
                                          Stroke="#86868B" StrokeThickness="1.5"
                                          Width="16" Height="16" Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#F2F2F7"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <StackPanel Grid.Row="1" Margin="24,20,24,16" VerticalAlignment="Top">
                <TextBlock Text="请选择关闭方式：" 
                           Foreground="#86868B" 
                           FontSize="13"
                           Margin="0,0,0,16"/>
                
                <!-- 选项 - 使用原生样式确保显示 -->
                <RadioButton x:Name="rbMinimize" 
                             IsChecked="True"
                             Margin="0,0,0,12"
                             FontSize="14"
                             Foreground="#1D1D1F">
                    <RadioButton.Content>
                        <TextBlock Text="最小化到系统托盘" VerticalAlignment="Center"/>
                    </RadioButton.Content>
                </RadioButton>
                
                <RadioButton x:Name="rbExit" 
                             Margin="0,0,0,16"
                             FontSize="14"
                             Foreground="#1D1D1F">
                    <RadioButton.Content>
                        <TextBlock Text="退出程序" VerticalAlignment="Center"/>
                    </RadioButton.Content>
                </RadioButton>

                <!-- 不再询问 -->
                <CheckBox x:Name="cbDontAsk" 
                          Margin="0,8,0,0"
                          FontSize="13"
                          Foreground="#86868B">
                    <CheckBox.Content>
                        <TextBlock Text="记住我的选择，不再询问" VerticalAlignment="Center"/>
                    </CheckBox.Content>
                </CheckBox>
            </StackPanel>

            <!-- 底部按钮 -->
            <Border Grid.Row="2" Background="#FBFBFD" CornerRadius="0,0,12,12"
                    BorderBrush="#F2F2F7" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="20,16">
                    <Button Content="取消" 
                            Width="80"
                            Click="BtnCancel_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0"/>
                    <Button Content="确定" 
                            Width="80"
                            Click="BtnOK_Click"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
